[Unit]
Description=Neon Admin Enclosure
PartOf=neon.service
After=neon-bus.service

[Service]
Type=notify
TimeoutStartSec=300
TimeoutStopSec=60
Restart=always
User=root
EnvironmentFile=/etc/neon/neon_env.conf
WorkingDirectory=/opt/neon
ExecStart=/usr/libexec/neon-admin-enclosure.py
LogNamespace=neon
EnvironmentFile=/etc/neon/neon_env.conf

[Install]
WantedBy=neon.service
