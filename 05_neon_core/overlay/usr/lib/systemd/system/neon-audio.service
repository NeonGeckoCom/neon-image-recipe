[Unit]
Description=Neon Audio Service
PartOf=neon.service
After=neon.service
After=neon-bus.service
LogNamespace=neon

[Service]
Type=notify
TimeoutStartSec=300
TimeoutStopSec=30
Restart=always
User=neon
WorkingDirectory=/opt/neon
ExecStart=/usr/libexec/neon-audio.py

[Install]
WantedBy=neon.service
